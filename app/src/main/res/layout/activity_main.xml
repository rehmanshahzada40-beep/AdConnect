<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    tools:context=".MainActivity">

    <!-- App Logo -->
    <TextView
        android:id="@+id/logoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AdConnect"
        android:textColor="#00AEEF"
        android:textSize="28sp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginBottom="32dp" />

    <!-- Illustration -->
    <ImageView
        android:id="@+id/illustrationImage"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:src="@drawable/ic_onboarding_illustration"
        android:contentDescription="Intro Illustration"
        android:layout_marginBottom="32dp" />

    <!-- Welcome Headline -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to AdConnect"
        android:textColor="#1E1E1E"
        android:textSize="22sp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginBottom="8dp" />

    <!-- Subtext -->
    <TextView
        android:id="@+id/subText"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="The smart way to connect advertisers and customers worldwide."
        android:textColor="#6B7280"
        android:textAlignment="center"
        android:fontFamily="@font/inter_regular"
        android:textSize="14sp"
        android:layout_marginBottom="48dp" />

    <!-- "Let's Start" Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLetsStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Letâ€™s Start"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/poppins_semibold"
        android:paddingVertical="14dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#00AEEF" />

</LinearLayout>
